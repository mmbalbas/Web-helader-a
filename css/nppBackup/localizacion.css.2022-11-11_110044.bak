body{
box-sizing: border-box;
width: 100%;
margin:0;
padding: 0; 
}
#contenedor {
background: url("../img/platoopacidad.png") no-repeat center fixed ;
background-size: cover;
}
#cabecera{
width: 100%;
min-height: 150px;
}
h1 {
color: white;
text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px lightblue;
position: fixed;
top:5px;
left: 25px;
font-size: 4rem;
z-index: 100;
}
ul {
list-style-type: none;
margin: 0 0 0 25%;
padding: 30px;
position: fixed;
top: 35px;
right: 20px;
width: 47%;
font-size: 2rem;
font-weight: bold;
z-index: 100;
}
li a{
display: inline-block;
margin: 0 5%;
float: left;
color: #730202;
text-align: center;
padding: 10px 18px;
text-decoration: none;
}
li a{
display: inline-block;
margin: 0;
float: left;
color: #000;
text-align: center;
padding: 10px 18px;
text-decoration: none;
font-size: 1.9rem;
}
li {
text-align: center;
color: #730202;
}
li a:visited {
color: blue;
text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 10px lightblue;
}
li a.active {
background-color: #04BF8A;
color: white;
text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 10px lightblue;
border-radius: 20px;
}
li a:hover:not(.active) {
background-color: lightblue;
color: blue;
text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 10px lightblue;
border-radius: 20px;
}
#contenido {
width: 100%;
min-height: 500px;
}
 .mapa iframe {
width: 100%; 
}


#pie{
clear: both;     
width: 100%;
min-height: 250px;
background-color: rgba(242, 5, 5, 0.5);
}
.direccion {
float: left;
width:30%;
float: left;
min-height: 200PX;
padding:20px;
text-align: center;

}
.mail {
float: left;
width: 30%;
float: left;
min-height: 200X;
padding:20px;
text-align: center;
}
.telefono {
float: left;
width:30%;
float: left;
min-height: 200PX;
padding:20px;
text-align: center;
}

#pie img {
width:15%
}
.telefono, .mail a {
color: blue;
text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px white;

font-size: 1.5rem;
	
}
h3 {
color: white;
text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px lightblue;	
}

